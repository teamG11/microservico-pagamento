generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Pagamento {
    id                     String           @id @default(auto()) @map("_id") @db.ObjectId
    requestPayload         String           @map("request_payload")
    responsePayload        String           @map("response_payload")
    webhookResponsePayload String?          @map("webhook_response_payload")
    createdAt              DateTime         @default(now()) @map("created_at")
    updatedAt              DateTime         @default(now()) @updatedAt @map("updated_at")
    PedidoPagamento        PedidoPagamento?

    @@map("pagamento")
}

model PedidoPagamento {
    id              String    @id @default(auto()) @map("_id") @db.ObjectId
    idPedido        Int       @unique @map("id_pedido")
    valor           Int
    statusPagamento String    @map("status_pagamento")
    idPagamento     String    @unique @map("id_pagamento") @db.ObjectId
    pagamento       Pagamento @relation(fields: [idPagamento], references: [id])
    createdAt       DateTime  @default(now()) @map("created_at")
    updatedAt       DateTime  @default(now()) @updatedAt @map("updated_at")

    @@map("pedido_pagamento")
}
